<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GenderActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsbold"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Êtes vous une personne active ?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <Button
        android:id="@+id/btnSedentaire"
        android:layout_width="292dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        android:background="@drawable/transparent_button"
        android:text="Sédentaire"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.384"
        tools:ignore="MissingConstraints">

    </Button>
    <Button
        android:id="@+id/btnLegerement"
        android:layout_width="292dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        android:background="@drawable/transparent_button"

        android:text="Légèrement active "
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.514"
        tools:ignore="MissingConstraints">

    </Button>


    <Button
        android:id="@+id/btnModerementActive"
        android:layout_width="292dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        android:background="@drawable/transparent_button"

        android:text="Modérément active"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.649"
        tools:ignore="MissingConstraints">


    </Button>

    <Button
        android:id="@+id/btnTresActive"
        android:layout_width="292dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        android:background="@drawable/transparent_button"

        android:text="Très active"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.78"
        tools:ignore="MissingConstraints">

    </Button>

    <Button
        android:id="@+id/btnExtenement"
        android:layout_width="292dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        android:background="@drawable/transparent_button"
        android:text="Exténement active"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.916"
        tools:ignore="MissingConstraints">


    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>