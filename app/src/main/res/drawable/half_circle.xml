<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background rectangle -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black"/> <!-- Set your desired background color -->
        </shape>
    </item>
    <!-- Half circle -->
    <item android:top="50dp"> <!-- Adjust the top padding to control the thickness of the half circle -->
        <shape android:shape="oval">
            <solid android:color="@color/green"/> <!-- Set your desired circle color -->
        </shape>
    </item>
</layer-list>
