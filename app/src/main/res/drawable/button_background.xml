<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#CCCCCC"/> <!-- Set your desired color for disabled state -->
            <corners android:radius="20dp"/> <!-- Adjust corner radius as needed -->
        </shape>
    </item>
    <!-- Normal state -->
    <item>
        <shape>
            <solid android:color="@color/green"/> <!-- Set your desired color for normal state -->
            <corners android:radius="20dp"/> <!-- Adjust corner radius as needed -->
        </shape>
    </item>
</selector>
